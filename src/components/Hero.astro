---
import video from "@assets/video_file_12366844_sd.mp4";
import videoPoster from "@assets/video.jpg";

export interface Props {
  class: string;
}

const { class: className } = Astro.props;
---

<header class:list={[className]}>
  <video
    playsinline
    autoplay
    loop
    muted
    preload="auto"
    poster={videoPoster}
    src={video}></video>
</header>
<style>
  video {
    vertical-align: middle;
    object-fit: cover;
    width: 100% !important;
    height: 300px !important;
  }
</style>
