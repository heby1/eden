---
import hamburger from "@assets/hamburger-menu-svgrepo-com.svg";
import { useState } from 'react';


export interface Props {
  class: string;
}

const { class: className } = Astro.props;

//const [open, setOpen] = useState(false);

---

<style>
  #mobileMenuLayer {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 1);
    z-index: 100;
  }

  #mobileMenuLayer ul {
    width: 100%;
    display: inline-block;
    text-align: center;
  }

  #mobileMenuLayer ul li {
    display: inline-block;
    width: 100%;
    padding: 1rem 0;
  }

  #mobileMenuLayer ul li a {
    font-size: 2rem;
    text-decoration: none;
  }

  #mobileMenuLayer ul li a:hover {
    text-decoration: underline;
  }

  #mobileMenuLayer span {
    width: 100%;
    text-align: right;
  }

  #mobileMenuLayer span button {
    width: 100%;
    text-align: right;
    padding: 1rem;
  }
</style>

<nav class:list={[className]}>
  <button id="mobileMenuButton">
    <img src={hamburger.src} alt="" />
  </button>
  <div id="mobileMenuLayer" class="hidden">
    <span>
      <button id="closeMobileMenuButton">
      Sulje valikko
      </button>
    </span>
    <ul>
      <li><a href="/">Etusivu</a></li>
      <li><a href="/esittely">Esittely</a></li>
      <li><a href="/tapahtumat">Tapahtumat</a></li>
      <li><a href="/yhteystiedot">Yhteystiedot</a></li>
      <li><a href="/yhteystiedot">Ajankohtaista</a></li>
      <li><a href="/ota-yhteytta">Ota yhteytt√§</a></li>
    </ul>
  </div>
</nav>

<script>

  const mobileMenuLayer = document.getElementById('mobileMenuLayer');
  const mobileMenuButton = document.getElementById('mobileMenuButton');
  const closeMobileMenuButton = document.getElementById('closeMobileMenuButton');

  mobileMenuButton.addEventListener('click', () => {
    mobileMenuLayer.classList.remove('hidden');
  });

  closeMobileMenuButton.addEventListener('click', () => {
    mobileMenuLayer.classList.add('hidden');
  });

