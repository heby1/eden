---
import Logo from '@components/Logo.astro';
import TopNavigation from '@components/TopNavigation.astro';
import type { MarkdownLayoutProps } from 'astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;

const posts = await Astro.glob('/src/pages/ajankohtaista/*.md');

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="container mx-auto grid grid-cols-2 p-2">
			<Logo class="w-[200px]"></Logo>
			<TopNavigation class=""></TopNavigation>
		</header>

		<div>
			<h2>List all posts</h2>
			{posts.slice(0, 3).map((post) => (
				<article>
					<h1>{post.frontmatter.title}</h1>
					<p>{post.frontmatter.description}</p>
					<a href={post.url}>Lue lisää</a>
				</article>
			))}
		</div>

		<slot />
	</body>
</html>
